<% form_for(@city) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :state %><br />
    <%= f.select :state_id, @states.collect {|state| [ state.name, state.id ] } %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>