<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>	
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />
  
	<title>Active.com - Search</title>
	
	<%= stylesheet_link_tag 'reset','fonts','flag' %>
	<%= javascript_include_tag 'prototype','effects' %>
</head>

<body id="<%= "#{params[:controller]}_#{params[:action]}" %>">

  <% if flash[:notice] %>
    <div id="notice" style="display:none;"><%= flash[:notice] %></div>
    <script type="text/javascript">
      $('notice').appear({duration:.5});
      $('notice').fade({delay:5});
    </script>
  <% end %>
  
  <div id="header">
    <div id="active">
      <div id="active_left">
        <%= link_to('<h1><span>Active.com</span></h1>', root_path) %>
      </div>

      <ul id="logged_in_options">
        <li><%= link_to 'Watch a Screencast', :controller => 'screencast' %></li>
        <li><%= link_to 'Logout', logout_path %></li>
        <li><%= link_to('Admin', :controller => 'admin') if is_admin? %></li>
      </ul>
    </div>
    <img src="/images/beta_notice.png" alt="Remember, it's a beta!" id="beta_notice" />
  </div>

  <div id="body">

    <div id="container">
      <%= yield %>
    </div>
  
    <div id="footer">
      <div id="copyright">Copyright &copy;2009 <%= link_to 'Active Network', 'http://activenetwork.com' %>.</div>
    </div>
  </div>
    
  <script type="text/javascript">
    var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
    document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
  </script>
  <script type="text/javascript">
    try {
      var pageTracker = _gat._getTracker("UA-6622846-1");
      pageTracker._trackPageview();
    } 
    catch(err) {}
  </script>
  
</body>
</html>