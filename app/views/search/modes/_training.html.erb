<input type="hidden" name="location" id="location" value="<%= params[:location] %>" />

<div id="keywords_container">
	<label for="keywords">Keywords <span class="optional">(optional)</span></label>
	<input type="text" name="q" id="q" value="<%= params[:q] %>" onkeypress="return handleEnter(this.form, event);" />
</div>

<div class="column">
	<label for="sport">Sport/Activity</label>
	<select name="sport" id="sport">
	  <option value="any">Any</option>
	  <option value="cycling">Cycling</option>
	  <option value="fitness">Fitness</option>
	  <option value="running">Running</option>
	  <option value="swimming">Swimming</option>
	  <option value="triathlon">Triathlon</option>
	  <option value="walking">Walking</option>
	</select>
</div>

<div class="column">
	<label>Skill Level</label>
	<select name="difficulty" id="difficulty">
	  <option value="any">Any</option>
	  <option value="beginner">Beginner</option>
	  <option value="intermediate">Intermediate</option>
	  <option value="advanced">Advanced</option>
	</select>
</div>

<script type="text/javascript">
  // initialize search dropdowns
  url.sport ? selectOption('sport',url.sport) : null;
  url.difficulty ? selectOption('difficulty',url.difficulty) : null;
</script>
