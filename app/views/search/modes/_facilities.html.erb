<div id="keywords_container">
	<label for="keywords">Keywords <span class="optional">(optional)</span></label>
	<input type="text" name="q" id="q" value="<%= params[:q] %>" onkeypress="return handleEnter(this.form, event);" />
</div>

<div class="column">
	<label for="sport">Sport/Activity</label>
	<select name="sport" id="sport"></select>
</div>

<script type="text/javascript">
  // initialize search dropdowns
  var s = new Search(assets);
  url.sport ? selectOption('sport',url.sport) : null; s.changeSport();
</script>