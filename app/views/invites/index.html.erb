<h1>Listing invites</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Available</th>
    <th>Used</th>
    <th>Last used at</th>
    <th colspan="3">Actions</th>
  </tr>

<% for invite in @invites %>
  <tr>
    <td><%=h invite.code %></td>
    <td><%=h invite.available %></td>
    <td><%= link_to(invite.used, users_path(:invite => invite.id)) %></td>
    <td>
      <% if invite.last_used_at %>
        <%=h invite.last_used_at.to_s(:long) %>
      <% else %>
        (never)
      <% end %>
    </td>
    <td><%= link_to 'Show', invite %></td>
    <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
    <td><%= link_to 'Destroy', invite, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

