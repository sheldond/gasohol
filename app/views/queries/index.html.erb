<table>
  <tr>
    <th>id</th>
    <% for column in Query.content_columns %>
      <th><%= column.human_name %></th>
    <% end %>
  </tr>
  
  <% for query in @queries %>
    <tr>
      <td><%= query.id %></td>
      <% for column in Query.content_columns %>
        <td><%= h query.send(column.name) %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if @queries.respond_to?('total_pages') %>
  <%= will_paginate @queries %>
<% end %>